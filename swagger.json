    "/auth/register": {
      "post": {
        "tags": [ "auth" ],
        "summary": "Sign up account",
        "description": "",
        "operationId": "register",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "description": "email and password required",
              "required": true,
              "schema": {
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "username": "hongquangraem",
                  "email": "danghongquang99@gmail.com",
                  "password": "123456789"
                }
              }
            }
          }
        },
        "responses": {
          "409": {
            "description": "Email already existed", 
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "$ref": "#/components/schemas/response"
                  },
                  "example": {
                    "status": "409",
                    "message": "Email already existed"
                  }
                }
              }
            }
          },
          "200": {
            "description": "Register successfully",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "$ref": "#/components/schemas/response"
                  },
                  "example": {
                    "status": "200",
                    "message": "Register successfully"
                  }
                }
              }
            }
          }
        }

      }
    },
